<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProductDetailActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <com.google.android.material.card.MaterialCardView
            android:id="@+id/card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:layout_marginStart="2dp"
            android:layout_marginEnd="2dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10dp"
                android:orientation="vertical">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <!-- Title, secondary and supporting text -->

                    <TextView
                        android:id="@+id/productDetailName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Product Name"
                        android:textAppearance="?attr/textAppearanceHeadline6" />

                    <TextView
                        android:id="@+id/productDetailPrice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="Rp1,000,000"
                        android:textAppearance="?attr/textAppearanceBody2"
                        android:textColor="?android:attr/textColorSecondary" />

                </LinearLayout>


                <TableLayout
                    android:id="@+id/tableLayout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@id/accountDetails"
                    android:layout_marginTop="10dp"
                    android:stretchColumns="1"
                    app:layout_constraintTop_toBottomOf="@+id/accountDetails"
                    tools:layout_editor_absoluteX="0dp">

                    <TableRow
                        android:layout_marginTop="0dp"
                        android:layout_marginBottom="10dp">

                        <TextView
                            android:layout_width="265dp"
                            android:layout_column="1"
                            android:padding="10dip"
                            android:text="Detail Produk"
                            android:textColor="#000000"
                            android:textSize="15sp"
                            android:textStyle="bold" />

                        <ImageView
                            android:id="@+id/imageView"
                            android:layout_width="match_parent"
                            android:layout_height="27dp"
                            app:srcCompat="@drawable/ic_baseline_shopping_cart_24" />

                    </TableRow>

                    <TableRow
                        android:layout_marginTop="0dp"
                        android:layout_marginBottom="10dp">

                        <TextView
                            android:layout_column="1"
                            android:padding="10dip"
                            android:text="Category"
                            android:textSize="15sp" />

                        <TextView
                            android:id="@+id/productDetailCategory"
                            android:gravity="right"
                            android:padding="10dip"
                            android:text="null"
                            android:textStyle="bold" />
                    </TableRow>

                    <TableRow
                        android:layout_marginTop="0dp"
                        android:layout_marginBottom="10dp">

                        <TextView
                            android:layout_column="1"
                            android:padding="10dip"
                            android:text="Condition"
                            android:textSize="15sp" />

                        <TextView
                            android:id="@+id/productDetailCondition"
                            android:gravity="right"
                            android:padding="10dip"
                            android:text="null"
                            android:textStyle="bold" />
                    </TableRow>

                    <TableRow
                        android:layout_marginTop="0dp"
                        android:layout_marginBottom="10dp">

                        <TextView
                            android:layout_column="1"
                            android:padding="10dip"
                            android:text="Weight"
                            android:textSize="15sp" />

                        <TextView
                            android:id="@+id/productDetailWeight"
                            android:gravity="right"
                            android:padding="10dip"
                            android:text="null"
                            android:textStyle="bold" />
                    </TableRow>

                    <TableRow
                        android:layout_marginTop="0dp"
                        android:layout_marginBottom="10dp">

                        <TextView
                            android:layout_column="1"
                            android:padding="10dip"
                            android:text="Shipment Plan"
                            android:textSize="15sp" />

                        <TextView
                            android:id="@+id/productDetailShipment"
                            android:gravity="right"
                            android:padding="10dip"
                            android:text="null"
                            android:textStyle="bold" />
                    </TableRow>
                </TableLayout>

                <!-- Buttons -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="8dp"
                    android:orientation="horizontal">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnBeli"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="8dp"
                        android:gravity="center"
                        android:paddingHorizontal="30dp"
                        android:text="BUY NOW" />

                </LinearLayout>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>